<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.arjevi.applanzamientosjuegos.RegistroActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RAtxtUser"
            android:layout_gravity="center_horizontal"
            android:hint="Usuario"
            style="@style/estiloTxtBlue" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RAtxtPass1"
            android:layout_gravity="center_horizontal"
            android:hint="Contraseña"
            style="@style/estiloTxtBlue" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RAtxtPass2"
            android:layout_gravity="center_horizontal"
            android:hint="Repetir contraseña"
            style="@style/estiloTxtBlue" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RAtxtEmail"
            android:layout_gravity="center_horizontal"
            android:hint="Email"
            style="@style/estiloTxtBlue" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnRegistrar"
            android:id="@+id/RAbtnRegistrar"
            android:layout_gravity="center_horizontal"
            style="@style/estiloBotonAzul" />
    </LinearLayout>
</RelativeLayout>
